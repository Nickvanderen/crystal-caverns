<section class="post-show-page">
  <h2>
    <%= @post.title %>
  </h2>
  <p>
    <%= @post.body %>
  </p>
  <p>
    <%= link_to 'Edit', edit_post_path(@post) %>
  </p>
  <p>
    <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %>
  </p>
</section><!-- end post show page -->
